    <style>
        /* RESET AND BASE STYLES */
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #1a1a2b;
            color: #f0f6ff;
            padding-top: 80px;
            display: flex;
            flex-direction: column;
            align-items: center;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            min-height: 100vh;
        }

        /* NAVIGATION BAR AND MENUS */
        header.navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #12121e;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 40px;
            z-index: 1000;
            transition: transform 0.3s ease-in-out;
        }
        .navbar.hidden {
            transform: translateY(-100%);
        }
        .navbar .logo-container {
            display: flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
        }
        .navbar .logo-container .logo-img {
            width: 30px;
            height: 30px;
            border-radius: 6px;
            animation: bounce 2s infinite;
        }
        .navbar .logo-container .logo-text {
            font-size: 1.5rem;
            font-weight: 800;
            color: #8c86fc;
            letter-spacing: 0.5px;
            text-decoration: none;
            text-shadow: 0 0 5px rgba(140, 134, 252, 0.5);
        }
        .navbar .menu-toggle {
            width: 28px;
            height: 22px;
            position: relative;
            cursor: pointer;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            z-index: 1010;
        }
        .menu-toggle .bar {
            height: 3px;
            background-color: #ddd;
            border-radius: 1px;
            transition: transform 0.3s ease, opacity 0.3s ease;
        }
        .menu-toggle.active .bar:nth-child(2) {
            opacity: 0;
        }
        .menu-toggle.active .bar:nth-child(1) {
            transform: translateY(9.5px) rotate(45deg);
        }
        .menu-toggle.active .bar:nth-child(3) {
            transform: translateY(-9.5px) rotate(-45deg);
        }
        .menu-panel {
            position: fixed;
            top: 60px;
            right: 0;
            width: 200px;
            height: calc(100vh - 60px);
            background-color: #12121e;
            transform: translateX(100%);
            transition: transform 0.3s cubic-bezier(0.68, -0.55, 0.27, 1.55);
            box-shadow: -2px 0 10px rgba(0, 0, 0, 0.5);
            z-index: 999;
            display: flex;
            flex-direction: column;
            padding: 15px;
            border-top: 1px solid #3b3d52;
        }
        .menu-panel.open {
            transform: translateX(0);
        }
        .menu-panel a {
            color: #c9d6ef;
            text-decoration: none;
            font-size: 1rem;
            padding: 12px 15px;
            border-bottom: 1px solid #33334d;
            transition: background-color 0.2s ease, color 0.2s ease;
        }
        .menu-panel a:hover {
            background-color: #33334d;
            color: #8c86fc;
        }

        /* MAIN CONTENT AND FORM */
        main {
            width: 100%;
            max-width: 800px;
            padding: 0 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        h1 {
            font-size: clamp(2.2rem, 5vw, 3.2rem);
            margin-bottom: 20px;
            text-align: center;
            color: #8c86fc;
            font-weight: 900;
            user-select: none;
            text-shadow: 0 2px 8px rgba(140, 134, 252, 0.6);
        }
        .subheading {
            text-align: center;
            max-width: 600px;
            margin: -10px auto 40px;
            color: #b0b8c9;
            line-height: 1.6;
            font-size: 1.1rem;
            font-weight: 400;
        }
        form#mainForm {
            display: flex;
            width: 100%;
            max-width: 600px;
            gap: 12px;
            margin-bottom: 40px;
            position: relative;
        }
        input[type="text"] {
            flex: 1;
            padding: 18px 22px;
            font-size: 1.15rem;
            border-radius: 18px;
            border: 2px solid #3b3d52;
            outline: none;
            background-color: #1f1f33;
            color: #eee;
            transition: border-color 0.3s, box-shadow 0.3s, background-color 0.3s;
            box-shadow: inset 0 2px 6px rgba(0, 0, 0, 0.5);
        }
        input[type="text"]::placeholder {
            color: #7a7f8c;
            font-weight: 500;
        }
        input[type="text"]:focus {
            border-color: #8c86fc;
            box-shadow: 0 0 15px #8c86fcaa;
            background-color: #2a2a3f;
        }
        .form-actions {
            display: flex;
            gap: 12px;
            flex-shrink: 0;
        }
        button {
            padding: 16px 28px;
            font-size: 1.15rem;
            border-radius: 18px;
            border: none;
            cursor: pointer;
            font-weight: 700;
            transition: background-color 0.3s, box-shadow 0.3s, transform 0.1s;
            user-select: none;
            flex-shrink: 0;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }
        button:hover {
            filter: brightness(1.1);
            box-shadow: 0 6px 15px rgba(0,0,0,0.5);
        }
        button:active {
            filter: brightness(0.9);
            box-shadow: inset 0 3px 6px rgba(0,0,0,0.4);
            transform: scale(0.98);
        }
        button.paste-btn {
            background-color: #3b3d52;
            color: #ccc;
        }
        button.paste-btn:hover {
            background-color: #4b4f6a;
            color: #fff;
        }
        button.clear-btn {
            background-color: #d9534f;
            color: #fff;
            display: none;
        }
        button.clear-btn:hover {
            background-color: #e74c3c;
        }
        button.fetch-btn {
            background-color: #8c86fc;
            color: #fff;
            box-shadow: 0 0 20px rgba(140, 134, 252, 0.6);
            font-weight: 800;
            letter-spacing: 0.03em;
        }
        button.fetch-btn:hover {
            background-color: #7d77e4;
            box-shadow: 0 0 30px rgba(140, 134, 252, 0.8);
        }

        #options, #preview-container {
            width: 100%;
            max-width: 600px;
        }
        #options {
            flex-direction: column;
            gap: 18px;
            margin-bottom: 50px;
            align-items: center;
            display: none;
        }
        .download-btn {
            background-color: #36395b;
            color: #b0c4f7;
            font-weight: 700;
            font-size: 1.35rem;
            padding: 18px 26px;
            border-radius: 18px;
            border: none;
            cursor: pointer;
            box-shadow: 0 0 15px #8c86fca0;
            transition: background-color 0.3s, box-shadow 0.3s, transform 0.15s ease;
            user-select: none;
            width: 100%;
            max-width: 320px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-family: 'Poppins', sans-serif;
        }
        .download-btn:hover {
            background-color: #8c86fc;
            color: #fff;
            box-shadow: 0 0 28px #8c86fcdd;
            transform: translateY(-3px);
        }
        .download-btn:active {
            transform: translateY(1px);
            box-shadow: inset 0 2px 8px #7d77e4a0;
        }
        #preview-container {
            margin-bottom: 50px;
            display: none;
            flex-direction: column;
            align-items: center;
            gap: 14px;
            border-radius: 18px;
            background: #1f1f33;
            padding: 18px 20px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.7);
            transition: background-color 0.3s ease;
            user-select: none;
        }
        #preview-container img {
            width: 100%;
            border-radius: 16px;
            box-shadow: 0 6px 16px rgba(0,0,0,0.75);
            user-select: none;
            pointer-events: none;
        }
        #preview-container h2 {
            color: #8c86fc;
            text-align: center;
            margin: 0 0 10px;
            user-select: text;
            font-weight: 700;
            font-size: 1.4rem;
            text-shadow: 0 1px 3px rgba(140, 134, 252, 0.7);
        }

        /* NEW EMULATOR SHOWCASE SECTION */
        #emulator-showcase {
            width: 100%;
            max-width: 800px;
            margin: 0 auto 70px;
            padding: 0 20px;
        }
        #emulator-showcase h2 {
            color: #8c86fc;
            font-weight: 800;
            margin-bottom: 40px;
            font-size: 2.2rem;
            text-align: center;
            text-shadow: 0 0 10px rgba(140, 134, 252, 0.8);
        }
        .emulator-item {
            display: flex;
            align-items: center;
            gap: 30px;
            margin-bottom: 60px;
            padding: 20px;
            background-color: #1f1f33;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.6);
            transition: transform 0.3s ease;
        }
        .emulator-item:hover {
            transform: translateY(-5px);
        }
        .emulator-item:nth-child(even) {
            flex-direction: row-reverse;
        }
        .emulator-item:nth-child(even) .emulator-text-container {
            text-align: right;
        }
        .emulator-image-container {
            flex: 1;
            max-width: 300px;
        }
        .emulator-image-container img {
            width: 100%;
            border-radius: 16px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.7);
        }
        .emulator-text-container {
            flex: 1;
            padding: 10px;
        }
        .emulator-text-container h3 {
            font-size: 1.6rem;
            color: #fff;
            margin-bottom: 10px;
            font-weight: 700;
        }
        .emulator-text-container p {
            font-size: 1rem;
            color: #b0b8c9;
            line-height: 1.7;
        }
        @media (max-width: 768px) {
            .emulator-item, .emulator-item:nth-child(even) {
                flex-direction: column;
                text-align: center;
            }
            .emulator-text-container {
                text-align: center;
            }
        }
        /* END NEW SECTION */

        /* FAQ ACCORDION */
        .accordion {
            width: 100%;
            max-width: 600px;
            background-color: #1f1f33;
            border-radius: 18px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.7);
            overflow: hidden;
            user-select: none;
            margin-bottom: 70px;
        }
        .accordion-item {
            border-bottom: 1px solid #33334d;
        }
        .accordion-item:last-child {
            border-bottom: none;
        }
        .accordion-header {
            background-color: #2a2a3f;
            cursor: pointer;
            padding: 22px 28px;
            font-weight: 600;
            font-size: 1.15rem;
            color: #b0c4f7;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: background-color 0.3s, color 0.3s;
            user-select: none;
            border-left: 6px solid transparent;
        }
        .accordion-header:hover {
            background-color: #3b3d52;
            color: #8c86fc;
            border-left-color: #8c86fc;
        }
        .accordion-header.active {
            background-color: #8c86fc;
            color: #f0f6ff;
            border-left-color: #f0f6ff;
            text-shadow: 0 0 8px rgba(240,246,255,0.7);
        }
        .accordion-content {
            max-height: 0;
            overflow: hidden;
            background-color: #1a1a2b;
            color: #cfd3e2;
            padding: 0 28px;
            font-size: 1rem;
            line-height: 1.7;
            transition: max-height 0.4s ease, padding 0.4s ease;
            user-select: text;
        }
        .accordion-content.open {
            padding: 18px 28px 22px;
            max-height: 800px;
        }
        .accordion-header::after {
            content: "▶";
            font-size: 1.1rem;
            transition: transform 0.3s;
            color: #b0c4f7;
            user-select: none;
        }
        .accordion-header.active::after {
            transform: rotate(90deg);
            color: #f0f6ff;
        }

        /* ABOUT SECTION */
        #about {
            max-width: 600px;
            margin: 0 auto 60px;
            color: #b0b8c9;
            font-size: 1.1rem;
            line-height: 1.8;
            text-align: left;
            user-select: text;
            font-weight: 400;
        }
        #about h2 {
            color: #8c86fc;
            font-weight: 800;
            margin-bottom: 20px;
            font-size: 2rem;
            text-shadow: 0 0 10px rgba(140, 134, 252, 0.8);
        }
        #about p {
            margin-bottom: 30px;
        }
        #about ul {
            list-style-type: '⚡ ';
            padding-left: 20px;
            margin-bottom: 30px;
            color: #ddd;
        }
        #about li {
            margin-bottom: 12px;
        }
        #about li span {
            color: #fff;
            font-weight: 700;
        }

        /* DISCORD BUTTON AND FOOTER */
        .discord-redirect-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin: 40px auto;
            padding: 14px 22px;
            border-radius: 14px;
            font-weight: 700;
            font-size: 1.1rem;
            text-decoration: none;
            background-color: #5865F2;
            color: white;
            box-shadow: 0 6px 12px rgba(88, 101, 242, 0.6);
            transition: all 0.3s ease;
        }
        .discord-redirect-btn:hover {
            background-color: #4752C4;
            box-shadow: 0 8px 18px rgba(71, 82, 196, 0.8);
            transform: translateY(-2px);
        }
        .discord-redirect-btn:active {
            background-color: #3a3f90;
            box-shadow: inset 0 3px 8px rgba(0,0,0,0.3);
            transform: translateY(1px);
        }
        .discord-icon {
            width: 26px;
            height: 26px;
            fill: currentColor;
        }
        footer {
            width: 100%;
            max-width: 600px;
            color: #666;
            font-size: 0.95rem;
            text-align: center;
            margin: 30px auto 15px;
            user-select: none;
            font-weight: 400;
        }
        footer a {
            color: #8c86fc;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }
        footer a:hover {
            color: #b0c4f7;
            text-decoration: underline;
        }

        /* KEYFRAMES */
        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-5px); }
            60% { transform: translateY(-3px); }
        }

        /* MEDIA QUERIES */
        @media (max-width: 768px) {
            header.navbar { padding: 15px 20px; }
            input[type="text"] { font-size: 1rem; padding: 16px 20px; }
            .form-actions { display: none; }
            form#mainForm { flex-direction: column; }
            button.paste-btn, button.clear-btn, button.fetch-btn { width: 100%; margin-top: 10px; }
        }

        @media (min-width: 769px) {
            .form-actions { display: flex; }
        }

        @media (max-width: 480px) {
            body { padding-top: 60px; }
            header.navbar { padding: 8px 15px; }
            .navbar .logo-container .logo-img { width: 24px; height: 24px; }
            .navbar .logo-container .logo-text { font-size: 1.3rem; }
            .menu-panel { width: 180px; top: 44px; height: calc(100vh - 44px); }
            .menu-panel a { font-size: 1rem; padding: 10px 5px; }
            h1 { font-size: 2rem; }
            .subheading { font-size: 1rem; }
            button, .download-btn, .accordion-header { font-size: 1rem; padding: 14px 18px; }
            .accordion-header { padding: 18px 24px; font-size: 1.05rem; }
            #about { font-size: 0.95rem; line-height: 1.6; padding: 0 15px; }
            .accordion, #preview-container { max-width: 100%; }
            .download-btn { max-width: 100%; }
            .discord-redirect-btn { font-size: 1rem; padding: 10px 16px; }
            .discord-redirect-btn .discord-icon { width: 22px; height: 22px; }
        }
    </style>
</head>
