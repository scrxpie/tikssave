<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>TikTok Downloader</title>
  <style>
    body {
      background: #111;
      color: #eee;
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 2rem;
    }

    h1 {
      color: #00bcd4;
    }

    form {
      display: flex;
      gap: 8px;
      margin-top: 1rem;
      width: 100%;
      max-width: 500px;
    }

    input {
      flex: 1;
      padding: 10px;
      font-size: 1rem;
      background: #222;
      color: white;
      border: none;
      border-radius: 6px;
    }

    button {
      padding: 10px;
      border: none;
      background: #00bcd4;
      color: black;
      border-radius: 6px;
      cursor: pointer;
    }

    #options {
      margin-top: 20px;
      display: none;
      flex-direction: column;
      gap: 10px;
    }

    .download-btn {
      background: #00bcd4;
      color: black;
      padding: 10px 16px;
      border: none;
      border-radius: 6px;
      font-weight: bold;
      cursor: pointer;
    }

    .visitor-count {
      color: #666;
      font-size: 0.9rem;
      margin-top: 10px;
    }
  </style>
</head>
<body>

  <h1>TikTok Downloader</h1>
  <div class="visitor-count">Total Visitors: <%= count %></div>

  <form id="mainForm">
    <input type="text" id="videoUrl" placeholder="Paste TikTok URL..." required />
    <button type="button" onclick="pasteLink()">Yapıştır</button>
  </form>

  <button onclick="fetchLinks()" style="margin-top:10px;">Download</button>

  <div id="options">
    <button class="download-btn" onclick="download('music')">MP3</button>
    <button class="download-btn" onclick="download('hdplay')">HD (No Watermark)</button>
    <button class="download-btn" onclick="download('play')">No Watermark</button>
  </div>

  <script>
    function pasteLink() {
      navigator.clipboard.readText().then(text => {
        document.getElementById('videoUrl').value = text;
      });
    }

    async function fetchLinks() {
      const url = document.getElementById('videoUrl').value;
      if (!url) return alert("Please enter a URL");

      const res = await fetch('/get-links', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ url })
      });

      const data = await res.json();
      if (!data.success) return alert(data.message);

      window.downloadData = data; // globalde sakla
      document.getElementById('options').style.display = 'flex';
    }

    function download(type) {
      const data = window.downloadData;
      if (!data[type]) return alert("This quality is not available");

      const link = document.createElement('a');
      link.href = `/proxy-download?url=${encodeURIComponent(data[type])}&username=${data.username}`;
      link.setAttribute('download', '');
      link.click();
    }
  </script>
</body>
</html>
