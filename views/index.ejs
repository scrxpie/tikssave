<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>TikTok Downloader</title>
  <style>
    body {
      background-color: #1e1e1e;
      color: #e0e0e0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 20px 15px 60px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    h1 {
      color: #3b82f6;
      font-size: 2.6rem;
      margin-bottom: 15px;
    }
    form#mainForm {
      display: flex;
      width: 100%;
      max-width: 600px;
      gap: 10px;
      margin-bottom: 30px;
    }
    input[type="text"] {
      flex: 1;
      padding: 16px;
      font-size: 1.2rem;
      border-radius: 10px;
      border: none;
      background-color: #333;
      color: #fff;
    }
    input[type="text"]::placeholder {
      color: #aaa;
    }
    button {
      padding: 16px 20px;
      font-size: 1.1rem;
      border-radius: 10px;
      border: none;
      cursor: pointer;
      font-weight: 600;
    }
    .paste-btn {
      background-color: #555;
      color: #eee;
    }
    .clear-btn {
      background-color: #7c3aed;
      color: #fff;
    }
    .fetch-btn {
      background-color: #3b82f6;
      color: #fff;
    }
    #preview {
      margin: 20px 0;
      text-align: center;
      max-width: 600px;
      display: none;
    }
    #preview img {
      max-width: 100%;
      border-radius: 12px;
    }
    #preview h3 {
      margin: 10px 0 0;
      font-size: 1.2rem;
      color: #ccc;
    }
    #options {
      display: none;
      flex-direction: column;
      gap: 20px;
      width: 100%;
      max-width: 600px;
    }
    .download-btn {
      background-color: #1e40af;
      color: #a5b4fc;
      padding: 16px;
      font-size: 1.2rem;
      border-radius: 10px;
      border: none;
      cursor: pointer;
    }

    /* About & FAQ */
    #about, .accordion {
      max-width: 600px;
      margin: 40px auto;
    }
    #about h2, .accordion-header {
      color: #3b82f6;
      font-size: 1.5rem;
    }
    #about p {
      color: #ccc;
      font-size: 1rem;
      line-height: 1.6;
    }
    .accordion-item {
      background-color: #2b2b2b;
      border-bottom: 1px solid #444;
    }
    .accordion-header {
      padding: 15px;
      cursor: pointer;
      background-color: #333;
    }
    .accordion-content {
      padding: 10px 15px;
      color: #ddd;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
    }
    .accordion-content.open {
      max-height: 500px;
    }

    footer {
      margin-top: 80px;
      font-size: 0.9rem;
      color: #666;
      text-align: center;
    }

    @media (max-width: 480px) {
      form#mainForm {
        flex-direction: column;
      }
      button {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <h1>TikTok Downloader</h1>
  <form id="mainForm" onsubmit="return false;">
    <input type="text" id="videoUrl" placeholder="Paste TikTok video link here..." required />
    <button type="button" class="paste-btn" onclick="pasteLink()">Paste</button>
    <button type="button" class="clear-btn" onclick="clearInput()" style="display:none">Clear</button>
    <button type="button" class="fetch-btn" onclick="fetchLinks()">Download</button>
  </form>

  <div id="preview">
    <img id="thumb" src="" alt="Thumbnail" />
    <h3 id="title"></h3>
  </div>

  <div id="options"></div>

  <section id="about">
    <h2>Unlimited TikTok Downloads</h2>
    <p>Download TikTok videos without limits, for free. Just paste your link, choose a format, and go!</p>
    <h2>No Watermarks</h2>
    <p>Enjoy clean downloads‚Äîour tool removes any watermark or TikTok logo for you.</p>
    <h2>MP4 & MP3 Formats</h2>
    <p>Choose between high-quality video (MP4) or audio-only (MP3) downloads.</p>
    <h2>How to Use</h2>
    <p>Paste a TikTok link above, click Download, and choose your format. That‚Äôs it!</p>
  </section>

  <section class="accordion">
    <div class="accordion-item">
      <div class="accordion-header">How do I copy a TikTok link?</div>
      <div class="accordion-content"><p>In the TikTok app, tap ‚ÄúShare‚Äù > ‚ÄúCopy Link‚Äù. Paste it into the box above.</p></div>
    </div>
    <div class="accordion-item">
      <div class="accordion-header">Can I download without watermark?</div>
      <div class="accordion-content"><p>Yes! Our downloader removes all watermarks from your video.</p></div>
    </div>
    <div class="accordion-item">
      <div class="accordion-header">Is this free to use?</div>
      <div class="accordion-content"><p>Absolutely. There are no limits or charges.</p></div>
    </div>
  </section>

  <footer>
    <p>¬© <%= new Date().getFullYear() %> TikTok Downloader. All rights reserved. Terms & Privacy apply.</p>
  </footer>

  <script>
    const input = document.getElementById("videoUrl");
    const clearBtn = document.querySelector(".clear-btn");

    input.addEventListener("input", () => {
      clearBtn.style.display = input.value ? "inline-block" : "none";
    });

    function clearInput() {
      input.value = "";
      clearBtn.style.display = "none";
      document.getElementById("options").style.display = "none";
      document.getElementById("preview").style.display = "none";
    }

    function pasteLink() {
      navigator.clipboard.readText().then(text => {
        input.value = text;
        clearBtn.style.display = "inline-block";
      });
    }

    async function fetchLinks() {
      const url = input.value.trim();
      if (!url) return alert("Please enter a URL.");

      try {
        const res = await fetch("/get-links", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ url })
        });

        const data = await res.json();
        if (!data.success) return alert(data.message);

        // Thumbnail & title
        document.getElementById("title").innerText = data.title || "TikTok Video";
        document.getElementById("thumb").src = data.cover || "";
        document.getElementById("preview").style.display = "block";

        // Download options
        const container = document.getElementById("options");
        container.innerHTML = "";

        if (data.music)
          container.innerHTML += `<button class="download-btn" onclick="download('music')">üéµ MP3 (Audio Only)</button>`;
        if (data.play)
          container.innerHTML += `<button class="download-btn" onclick="download('play')">üìπ MP4 (Standard)</button>`;
        if (data.hdplay)
          container.innerHTML += `<button class="download-btn" onclick="download('hdplay')">üé¨ MP4 (HD)</button>`;

        container.style.display = "flex";
      } catch (err) {
        console.error(err);
        alert("Something went wrong.");
      }
    }

    function download(type) {
      const data = window.downloadData;
      if (!data[type]) return alert("Not available.");
      const link = document.createElement("a");
      link.href = `/proxy-download?url=${encodeURIComponent(data[type])}&username=${data.username}&type=${type}`;
      link.setAttribute("download", "");
      link.click();
    }

    // Accordion logic
    document.querySelectorAll(".accordion-header").forEach(header => {
      header.addEventListener("click", () => {
        const content = header.nextElementSibling;
        document.querySelectorAll(".accordion-content").forEach(c => {
          if (c !== content) c.classList.remove("open");
        });
        content.classList.toggle("open");
      });
    });
  </script>
</body>
</html>
