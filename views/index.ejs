<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>TikTok Downloader - MP4 & MP3</title>
  <style>
    :root {
      --bg-dark: #1e1e1e;
      --bg-light: #f4f4f4;
      --text-dark: #e0e0e0;
      --text-light: #1e1e1e;
      --accent: #3b82f6;
      --gray: #888;
    }
    [data-theme="dark"] {
      background-color: var(--bg-dark);
      color: var(--text-dark);
    }
    [data-theme="light"] {
      background-color: var(--bg-light);
      color: var(--text-light);
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      padding: 20px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      transition: background-color 0.4s, color 0.4s;
    }

    h1 {
      font-size: 2.5rem;
      color: var(--accent);
      margin-bottom: 10px;
      text-align: center;
    }

    .theme-switch {
      position: fixed;
      top: 15px;
      right: 20px;
      background: transparent;
      border: 2px solid var(--accent);
      border-radius: 50px;
      padding: 8px 16px;
      cursor: pointer;
      font-size: 1rem;
      color: var(--accent);
      transition: background 0.3s;
    }

    .theme-switch:hover {
      background: var(--accent);
      color: #fff;
    }

    .visitors {
      font-size: 1rem;
      color: var(--gray);
      margin-bottom: 20px;
    }

    form {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      width: 100%;
      max-width: 600px;
      margin-bottom: 20px;
    }

    input[type="text"] {
      flex: 1;
      padding: 14px;
      font-size: 1rem;
      border: none;
      border-radius: 8px;
      background-color: #333;
      color: #fff;
    }

    button {
      padding: 14px 20px;
      font-size: 1rem;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: 0.3s;
      font-weight: bold;
    }

    .paste-btn {
      background-color: #666;
      color: #fff;
    }

    .fetch-btn {
      background-color: var(--accent);
      color: #fff;
    }

    .fetch-btn:hover {
      background-color: #2563eb;
    }

    #options {
      display: none;
      flex-direction: column;
      gap: 10px;
      width: 100%;
      max-width: 600px;
      margin-bottom: 40px;
    }

    .download-btn {
      background-color: #1e40af;
      color: #fff;
      padding: 14px;
      font-size: 1.1rem;
      border-radius: 8px;
      border: none;
      cursor: pointer;
    }

    .loading {
      margin: 20px 0;
      font-size: 1.1rem;
      color: var(--gray);
      display: none;
    }

    .footer {
      text-align: center;
      margin-top: auto;
      padding: 20px;
      font-size: 0.9rem;
      color: var(--gray);
    }

    @media (max-width: 480px) {
      h1 {
        font-size: 2rem;
      }
      button, input {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>
  <button class="theme-switch" onclick="toggleTheme()">üåô / ‚òÄÔ∏è</button>

  <h1>TikTok Downloader</h1>
  <p class="visitors">Total Visitors: <%= count %></p>

  <form onsubmit="return false;">
    <input type="text" id="videoUrl" placeholder="Paste TikTok video link here..." required />
    <button type="button" class="paste-btn" onclick="pasteLink()">Paste</button>
    <button type="button" class="fetch-btn" onclick="fetchLinks()">Download</button>
  </form>

  <div id="status" class="loading">Fetching download links...</div>
  <div id="options"></div>

  <div class="footer">¬© <%= new Date().getFullYear() %> tikssave.com ‚Äì All rights reserved.</div>

  <script>
    function toggleTheme() {
      const html = document.documentElement;
      html.dataset.theme = html.dataset.theme === 'light' ? 'dark' : 'light';
    }

    function pasteLink() {
      navigator.clipboard.readText()
        .then(text => {
          document.getElementById('videoUrl').value = text;
          alert("Link pasted! ‚úÖ");
        })
        .catch(() => alert("Clipboard access denied"));
    }

    async function fetchLinks() {
      const url = document.getElementById('videoUrl').value.trim();
      if (!url) return alert("Please enter a TikTok URL.");
      document.getElementById("status").style.display = "block";
      document.getElementById("options").style.display = "none";

      try {
        const res = await fetch('/get-links', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ url })
        });

        const data = await res.json();
        document.getElementById("status").style.display = "none";

        if (!data.success) return alert(data.message);

        window.downloadData = data;
        const container = document.getElementById('options');
        container.innerHTML = '';

        if (data.music)
          container.innerHTML += `<button class="download-btn" onclick="download('music')">üéµ MP3 (Audio Only)</button>`;
        if (data.play)
          container.innerHTML += `<button class="download-btn" onclick="download('play')">üìΩÔ∏è SD Video</button>`;
        if (data.hdplay)
          container.innerHTML += `<button class="download-btn" onclick="download('hdplay')">üìΩÔ∏è HD Video</button>`;

        container.style.display = 'flex';
      } catch (err) {
        document.getElementById("status").style.display = "none";
        alert("Error fetching download links.");
        console.error(err);
      }
    }

    function download(type) {
      const data = window.downloadData;
      if (!data[type]) return alert("This quality is not available.");
      const link = document.createElement('a');
      link.href = `/proxy-download?url=${encodeURIComponent(data[type])}&username=${data.username}&type=${type}`;
      link.setAttribute('download', '');
      link.click();
    }
  </script>
</body>
</html>
